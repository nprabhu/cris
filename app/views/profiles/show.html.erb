<div class="page-header">
 <h3>Welcome <%= @profile.first_name %> <small>Beauty is every where a welcome guest. </small></h3>
</div>
<p id="notice"><%= notice %></p>
<div class="pull-right">
<%= image_tag @profile.image.avatar.url(:medium) %></div>
<p>
  <b>First name:</b>
  <%= @profile.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @profile.last_name %>
</p>

<p>
  <b>Sex:</b>
  <%= @profile.sex %>
</p>

<p>
  <b>Status:</b>
  <%= @profile.status %>
</p>

<p>
  <b>Location:</b>
  <%= @profile.location %>
</p>

<p>
  <b>Birthday:</b>
  <%= @profile.birthday %>
</p>

<p>
  <b>Mobile:</b>
  <%= @profile.mobile %>
</p>

<p>
  <b>City:</b>
  <%= @profile.city %>
</p>

<p>
  <b>State:</b>
  <%= @profile.state %>
</p>

<p>
  <b>Country:</b>
  <%= @profile.country %>
</p>

<%= link_to 'Edit', edit_profile_path(@profile) %> | <%= link_to 'Destroy', @profile, method: :delete, data: { confirm: 'Are you sure?' } %>
